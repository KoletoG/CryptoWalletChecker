<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoWalletChecker.MainPage">

    <VerticalStackLayout Padding="20" VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Enter wallet address:" FontSize="18"/>

        <Entry x:Name="textInput" WidthRequest="250" Keyboard="Text" MaxLength="40" Placeholder="Enter wallet address..." />

        <Button Text="Check" Clicked="OnSubmitClicked"/>
    </VerticalStackLayout>

</ContentPage>
