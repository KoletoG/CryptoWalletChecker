<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoWalletChecker.MainPage">

    <VerticalStackLayout Padding="20" VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Enter wallet address:" FontSize="18"/>
        <Label x:Name="ShowOutput"  Text="" FontSize="18"/>
        <Entry x:Name="textInput" WidthRequest="350" Keyboard="Text" MaxLength="40" Placeholder="Enter wallet address..." />
        <HorizontalStackLayout Spacing="50" Padding="20">
            <Button x:Name="ButtonRegister" Text="Register a donation" IsVisible="False"/>
            <Button x:Name="ButtonCheck" Text="Check if wallet exists" Clicked="OnWalletCheck"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
