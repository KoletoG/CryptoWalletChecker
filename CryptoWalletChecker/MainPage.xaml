<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoWalletChecker.MainPage">
    <VerticalStackLayout Padding="20" VerticalOptions="Center" HorizontalOptions="Center" x:Name="ContentStart">
        <Label x:Name="WalletExistLabel"  Text="" IsVisible="False" FontSize="20" TextColor="Red"/>
        <Label x:Name="EnterWalletLabel" Text="Enter wallet address:" FontSize="18"/>
        <Entry x:Name="textInput" WidthRequest="350" Keyboard="Text" MaxLength="40" Placeholder="Enter wallet address..." />
        <Label x:Name="EnterSumLabel"  Text="" IsVisible="False" FontSize="16"/>
        <Entry x:Name="sumInput" WidthRequest="350" Keyboard="Numeric" MaxLength="40" Placeholder="Enter Sum to register..." IsVisible="False" />
        <Button x:Name="ButtonRegister" Text="Register a donation" Clicked="OnRegister" IsVisible="False"/>
        <Button x:Name="ButtonCheck" Text="Check if wallet exists" Clicked="OnWalletCheck"/>
    </VerticalStackLayout>
</ContentPage>
